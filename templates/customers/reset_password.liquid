<div id="customer-accounts"  class="content customer">

  <!-- Customer Reset Password -->
  <div id="customer-reset-password">

    <div class="page-header">
      <h1>{{ 'customer.reset_password.title' | t }}</h1>
    </div>

    <div class="boxed-form">
      {% form 'reset_customer_password' %}
        {{ form.errors | default_errors }}

        <div id="password" class="clearfix form-row">
          <label class="large" for="password">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password" value="" name="customer[password]" id="customer_password" class="styled-input" size="16">
        </div>
        <div id="password_confirm" class="clearfix form-row">
          <label class="large" for="password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="styled-input" size="16">
        </div>
        <div class="action_bottom">
          <input class="btn styled-submit" type="submit" value="{{ 'customer.reset_password.submit' | t }}">
        </div>
      {% endform %}
    </div>

  </div><!-- #customer-reset-password -->

</div><!-- #customer-accounts -->
