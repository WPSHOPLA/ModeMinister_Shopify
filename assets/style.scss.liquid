  'medium-down' '(max-width: #{$medium})',
  'large' '(min-width: #{$large})'
);
$breakpoint-has-widths: ('small', 'medium', 'medium-down', 'large');

/*============================================================================
  Grid mixins, based on breakpoints
==============================================================================*/
$class-type: unquote(".");
@mixin grid-media-query($media-query) {
  $breakpoint-found: false;

  @each $breakpoint in $breakpoints {
    $name: nth($breakpoint, 1);
    $declaration: nth($breakpoint, 2);

    @if $media-query == $name and $declaration {
      $breakpoint-found: true;

      @media only screen and #{$declaration} {
        @content;
      }
    }
  }

  @if $breakpoint-found == false{
    @warn "Breakpoint '#{$media-query}' does not exist";
  }
}

@mixin device-type($namespace:"") {
  #{$class-type}#{$namespace}col-1 { width: 8.333%; }
  #{$class-type}#{$namespace}col-2 { width: 16.666%; }
  #{$class-type}#{$namespace}col-3 { width: 25%; }
  #{$class-type}#{$namespace}col-4 { width: 33.333%; }
  #{$class-type}#{$namespace}col-5 { width: 41.666%; }
  #{$class-type}#{$namespace}col-6 { width: 50%; }
  #{$class-type}#{$namespace}col-7 { width: 58.333%; }
  #{$class-type}#{$namespace}col-8 { width: 66.666%; }
  #{$class-type}#{$namespace}col-9 { width: 75%; }
  #{$class-type}#{$namespace}col-10 { width: 83.333%; }
  #{$class-type}#{$namespace}col-11 { width: 91.666%; }
  #{$class-type}#{$namespace}col-12 { width: 100%; }
}

@mixin device-helper($namespace:"") {
  #{$class-type}#{$namespace}show        { display:block!important; }
  #{$class-type}#{$namespace}hide        { display:none!important; }

  #{$class-type}#{$namespace}text-left   { text-align:left!important; }
  #{$class-type}#{$namespace}text-right  { text-align:right!important; }
  #{$class-type}#{$namespace}text-center { text-align:center!important; }

  #{$class-type}#{$namespace}left        { float:left!important; }
  #{$class-type}#{$namespace}right       { float:right!important; }
}

/*================ Undo cleafix on default widths ================*/
@mixin clearfix-helper($namespace:"") {
  .grid-uniform {
    #{$class-type}#{$namespace}col-1:nth-child(12n+1),
    #{$class-type}#{$namespace}col-2:nth-child(6n+1),
    #{$class-type}#{$namespace}col-3:nth-child(4n+1),
    #{$class-type}#{$namespace}col-4:nth-child(3n+1),
    #{$class-type}#{$namespace}col-6:nth-child(2n+1)    { clear: both; }
  }
}

/*================ Non-responsive widths and helper classes ================*/
@include device-type();
@include device-helper();
@include clearfix-helper();

/*================ Responsive widths and helper classes ================*/
@each $name in $breakpoint-has-widths {
  @include grid-media-query($name) {
    @include device-type('#{$name}--');
    @include device-helper('#{$name}--');
    @include clearfix-helper('#{$name}--');
  }
}

